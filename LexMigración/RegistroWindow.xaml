<Window x:Class="LexMigración.RegistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar Nuevo Usuario" Height="550" Width="420" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="10" BorderBrush="#D4AF37" BorderThickness="2" Background="#F5F5F5" Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="🖋️ Registro de Nuevo Usuario" FontSize="24" FontWeight="Bold" FontFamily="Times New Roman" 
                       Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,25"/>

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <Label Content="Nombre de Usuario"/>
                <TextBox Name="TxtUsuario" />
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <Label Content="Contraseña"/>
                <PasswordBox Name="PwdContra"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,15">
                <Label Content="Confirmar Contraseña"/>
                <PasswordBox Name="PwdConfirmarContra"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,0,0,20">
                <Label Content="Rol de Acceso"/>
                <ComboBox Name="CmbRol">
                    <ComboBoxItem Content="Secretaria"/>
                    <ComboBoxItem Content="Lic.Sergio"/>
                </ComboBox>
            </StackPanel>

            <Button Grid.Row="5" Name="BtnRegistrar" Content="Registrar Usuario" Height="40" 
                    Style="{StaticResource PrimaryButtonStyle}" Click="BtnRegistrar_Click"/>

            <Button Grid.Row="6" Name="BtnCancelar" Content="Cancelar" Height="30" Width="100" 
                    Background="Transparent" Foreground="#555" BorderBrush="{x:Null}" Cursor="Hand" 
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="BtnCancelar_Click"/>

            <TextBlock Grid.Row="7" Name="TxtMensaje" Foreground="Crimson" FontWeight="Bold" Margin="0,15,0,0" 
                       TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </Grid>
    </Border>
</Window>