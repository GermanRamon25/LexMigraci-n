<Window x:Class="LexMigración.Anexo_A"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestión de Anexos y Expedientes" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="20" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📄 Registro de Anexo" FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20" FontFamily="Times New Roman"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <Label Content="Expediente Asociado"/>

                            <ComboBox Name="CbExpediente" 
                                      DisplayMemberPath="Identificador" 
                                      SelectedValuePath="Identificador"
                                      Margin="0,0,0,15"/>

                            <Label Content="Estado del Anexo" Margin="0,15,0,0"/>
                            <ComboBox Name="CbEstado">
                                <ComboBoxItem Content="Listo"/>
                                <ComboBoxItem Content="Faltante"/>
                                <ComboBoxItem Content="Observado"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="10,0,0,0">
                            <Label Content="Documento Adjunto"/>
                            <Button Name="BtnAgregarDocumento" Style="{StaticResource SecondaryButtonStyle}" Click="BtnAgregarDocumento_Click">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock FontFamily="Segoe UI Symbol" Text="📁" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Seleccionar Archivo..." VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <TextBlock Name="TxtNombreArchivo" Margin="0,8,0,0" FontStyle="Italic" Foreground="DarkBlue" TextWrapping="Wrap" Text="Ningún archivo seleccionado."/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="Anexos Guardados" FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                <DataGrid Grid.Row="1" Name="DgAnexos" AutoGenerateColumns="False" CanUserAddRows="False" SelectionChanged="DgAnexos_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Expediente" Binding="{Binding ExpedienteId}" Width="*"/>
                        <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="100"/>
                        <DataGridTextColumn Header="Archivo Adjunto" Binding="{Binding NombreArchivo}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,15,0,0" >
                    <Button Name="BtnGuardar" Content="Guardar Nuevo Anexo" Style="{StaticResource PrimaryButtonStyle}" Click="BtnGuardar_Click"/>
                </StackPanel>
            </Grid>
        </Grid>

        <DockPanel Grid.Column="1" LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Text="📝 Editor de Contenido del Expediente" 
                       FontSize="18" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
            <Button DockPanel.Dock="Bottom" Name="BtnActualizarContenido" Content="Guardar Cambios del Texto" 
                    Style="{StaticResource PrimaryButtonStyle}" Margin="0,15,0,0" HorizontalAlignment="Right" 
                    Click="BtnActualizarContenido_Click"/>
            <TextBox Name="TxtEditorContenido" 
                     AcceptsReturn="True" TextWrapping="Wrap" 
                     VerticalScrollBarVisibility="Auto" 
                     BorderBrush="#CCC" BorderThickness="1" Padding="5"
                     FontFamily="Consolas" FontSize="14" Height="515" Width="542"/>
        </DockPanel>
    </Grid>
</Window>