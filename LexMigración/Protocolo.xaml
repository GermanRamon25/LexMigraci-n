<Window x:Class="LexMigración.Protocolo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LexMigración"
        mc:Ignorable="d"
        Title="Protocolo" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- DataGrid con lista de protocolos -->
        <DataGrid Name="DgProtocolos" Grid.Row="0" Grid.Column="0" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="DgProtocolos_SelectionChanged" Margin="0,0,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Expediente" Binding="{Binding ExpedienteId}" Width="*"/>
                <DataGridTextColumn Header="Número Escritura" Binding="{Binding NumeroEscritura}" Width="*"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=d}" Width="*"/>
                <DataGridCheckBoxColumn Header="Firmado" Binding="{Binding Firmado}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formulario edición rápida -->
        <StackPanel Grid.Row="0" Grid.Column="1">
            <TextBlock Text="Detalles del Protocolo" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

            <TextBlock Text="Extracto:"/>
            <TextBox Name="TxtExtracto" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <TextBlock Text="Texto Completo:" Margin="0,10,0,0"/>
            <TextBox Name="TxtTextoCompleto" Height="120" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                <CheckBox Name="ChkFirmado" Content="Firmado"/>
            </StackPanel>
        </StackPanel>

        <!-- Botones y mensajes -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button Name="BtnMigrarAnexo" Content="Migrar Anexo → Protocolo" Width="180" Click="BtnMigrarAnexo_Click" Margin="0,0,10,0"/>
            <TextBlock Name="TxtMensaje" VerticalAlignment="Center" Foreground="Green" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
