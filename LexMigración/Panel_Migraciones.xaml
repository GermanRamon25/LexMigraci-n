<Window x:Class="LexMigración.Panel_Migraciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LexMigración"
        mc:Ignorable="d"
        Title="Panel_Migraciones" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Botones para migrar -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button Name="BtnMigrarAnexoProtocolo" Content="Migrar Anexo → Protocolo" Width="180" Margin="0,0,10,0" Click="BtnMigrarAnexoProtocolo_Click"/>
            <Button Name="BtnMigrarProtocoloIndice" Content="Migrar Protocolo → Índice" Width="180" Click="BtnMigrarProtocoloIndice_Click"/>
        </StackPanel>

        <!-- Lista Log / Historial -->
        <GroupBox Header="Log de Migraciones" Grid.Row="1" Margin="0,10,0,10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox Name="LstLogMigraciones" />
            </ScrollViewer>
        </GroupBox>

        <!-- Barra de progreso -->
        <ProgressBar Name="ProgressBarMigracion" Grid.Row="2" Height="25" Minimum="0" Maximum="100" Value="0" Visibility="Collapsed"/>
    </Grid>
</Window>
