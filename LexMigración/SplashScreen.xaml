<Window x:Class="LexMigración.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SplashScreen" Height="400" Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="10" Background="#F5F5F5" BorderBrush="#D4AF37" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="#BBBBBB" ShadowDepth="0" BlurRadius="15" Opacity="0.8"/>
        </Border.Effect>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/Assets/notaria215.png" Width="300"/>
            <ProgressBar IsIndeterminate="True" Margin="0,20,0,0" Width="300" Height="5"/>
            <TextBlock Text="Cargando aplicación..." Margin="0,10,0,0" Foreground="#555" HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>