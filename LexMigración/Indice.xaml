<Window x:Class="LexMigración.Indice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LexMigración"
        mc:Ignorable="d"
        Title="Índice de Escrituras" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.Resources>
        <Style x:Key="BaseTextBoxStyle" TargetType="{x:Type Control}">
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource BaseTextBoxStyle}"/>
        <Style TargetType="DatePicker" BasedOn="{StaticResource BaseTextBoxStyle}"/>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="#D9534F"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C9302C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📋 Índice General de Escrituras" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20" FontFamily="Times New Roman"/>

        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="15" BorderBrush="#EEE" BorderThickness="1" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Filtrar por:" VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="SemiBold" Foreground="#555"/>
                <TextBlock Text="Otorgante:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Name="TxtFiltroOtorgante" Width="200" Margin="0,0,15,0" TextChanged="Filtros_Changed"/>
                <TextBlock Text="Operación:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Name="TxtFiltroOperacion" Width="150" Margin="0,0,15,0" TextChanged="Filtros_Changed"/>
                <TextBlock Text="No. Escritura:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox Name="TxtFiltroNumero" Width="100" Margin="0,0,15,0" TextChanged="Filtros_Changed"/>
                <TextBlock Text="Fecha:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker Name="DpFiltroFecha" Width="130" SelectedDateChanged="Filtros_Changed"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" Name="DgIndice" AutoGenerateColumns="False" SelectionMode="Single" SelectionChanged="DgIndice_SelectionChanged" 
                  CanUserAddRows="False" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#DDD" 
                  AlternatingRowBackground="#FAFAFA" RowBackground="White" BorderBrush="#CCC">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#333"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,5"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="OTORGANTE" Binding="{Binding Otorgante, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                <DataGridTextColumn Header="OPERACIÓN" Binding="{Binding Operacion, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                <DataGridTextColumn Header="No. ESCRITURA" Binding="{Binding NumeroEscritura, UpdateSourceTrigger=PropertyChanged}" Width="150"/>
                <DataGridTextColumn Header="VOLUMEN" Binding="{Binding Volumen, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                <DataGridTextColumn Header="LIBRO" Binding="{Binding Libro, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                <DataGridTextColumn Header="FECHA" Binding="{Binding Fecha, StringFormat=dd/MM/yyyy, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                <DataGridTextColumn Header="FOLIO" Binding="{Binding Folio, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,15,0,0">
            <Button Name="BtnGuardarCambios" Content="Guardar Cambios" Style="{StaticResource PrimaryButtonStyle}" Click="BtnGuardarCambios_Click"/>
            <Button Name="BtnAgregarFila" Content="Agregar Fila" Style="{StaticResource SecondaryButtonStyle}" Click="BtnAgregarFila_Click"/>
            <Button Name="BtnEliminarFila" Style="{StaticResource DangerButtonStyle}" Click="BtnEliminarFila_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe UI Symbol" Text="🗑️" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Eliminar Fila" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Name="BtnImprimirLista" Content="Imprimir Lista" Style="{StaticResource SecondaryButtonStyle}" Click="BtnImprimirLista_Click"/>
            <TextBlock Name="TxtMensaje" VerticalAlignment="Center" Foreground="ForestGreen" FontWeight="Bold" Margin="15,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>