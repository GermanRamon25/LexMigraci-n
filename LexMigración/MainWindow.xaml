<Window x:Class="LexMigración.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LexMigración - Ventana Principal"
        Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" Margin="8,2">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="10" Background="#F5F5F5">
        <Border.Effect>
            <DropShadowEffect Color="#BBBBBB" ShadowDepth="0" BlurRadius="10" Opacity="0.5" RenderingBias="Quality"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.ColumnSpan="2" Background="#333333" MouseDown="MainWindow_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0,0,0">
                    <TextBlock Text="LexMigración" Foreground="#D4AF37" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="16"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                        <TextBlock Text="👤" FontFamily="Segoe UI Symbol" Foreground="#CFD8DC" VerticalAlignment="Center" Margin="0,0,8,0" ToolTip="Usuario Conectado"/>
                        <TextBlock x:Name="TxtUsuarioLogeado" Text="Nombre de Usuario" Foreground="White" FontWeight="SemiBold"/>
                    </StackPanel>
                    <Button Content="&#xE949;" FontFamily="Segoe MDL2 Assets" Width="45" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" Click="MinimizeWindow_Click" ToolTip="Minimizar"/>
                    <Button Content="&#xE739;" FontFamily="Segoe MDL2 Assets" Width="45" Height="45" Background="Transparent" Foreground="White" BorderThickness="0" Click="MaximizeRestoreWindow_Click" ToolTip="Maximizar/Restaurar"/>
                    <Button Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" Width="45" Height="45" Background="Transparent" Foreground="#F06292" BorderThickness="0" Click="CloseWindow_Click" ToolTip="Cerrar"/>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="1" Grid.Column="0" Background="#444444">
                <TextBlock Text="MENÚ PRINCIPAL" Foreground="#AAAAAA" FontWeight="Bold" Margin="20,20,0,10" FontSize="12"/>
                <Button x:Name="BtnExpedientes" Style="{StaticResource NavButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="📂" Margin="0,0,15,0" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock Text="Expedientes" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="BtnAnexos" Style="{StaticResource NavButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="📄" Margin="0,0,15,0" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock Text="Anexos" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="BtnProtocolos" Style="{StaticResource NavButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="📑" Margin="0,0,15,0" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock Text="Protocolos" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="BtnIndice" Style="{StaticResource NavButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="📋" Margin="0,0,15,0" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock Text="Índice" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Separator Margin="15" Background="#555555"/>
                <TextBlock Text="HERRAMIENTAS" Foreground="#AAAAAA" FontWeight="Bold" Margin="20,10,0,10" FontSize="12"/>
                <Button x:Name="BtnMigraciones" Style="{StaticResource NavButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontFamily="Segoe UI Symbol" Text="🔄" Margin="0,0,15,0" FontSize="18" VerticalAlignment="Center"/>
                        <TextBlock Text="Migraciones" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <ContentControl x:Name="MainContent" Grid.Row="1" Grid.Column="1" Margin="10">
                <Grid>
                    <Image Source="/Assets/notaria_215.jpg" 
                           Stretch="Fill" 
                           Opacity="10"/>
                </Grid>
            </ContentControl>

        </Grid>
    </Border>
</Window>