<Window x:Class="LexMigración.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acceso al Sistema" Height="450" Width="420" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="10" BorderBrush="#D4AF37" BorderThickness="2" Background="#F5F5F5" Padding="25">
        <Grid>
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Foreground" Value="#555"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Margin" Value="0,0,0,5"/>
                </Style>
                <Style x:Key="BaseTextBoxStyle" TargetType="{x:Type Control}">
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="#CCC"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Foreground" Value="#333"/>
                    <Setter Property="Padding" Value="8"/>
                </Style>
                <Style TargetType="TextBox" BasedOn="{StaticResource BaseTextBoxStyle}"/>
                <Style TargetType="PasswordBox" BasedOn="{StaticResource BaseTextBoxStyle}"/>
                <Style TargetType="ComboBox" BasedOn="{StaticResource BaseTextBoxStyle}"/>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                <TextBlock Text="⚖️" FontFamily="Segoe UI Symbol" FontSize="30" VerticalAlignment="Center" Foreground="#333"/>
                <TextBlock Text="Notaría Pública 215" FontSize="28" FontWeight="Bold" FontFamily="Times New Roman" 
                           Foreground="#333" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <Label Content="Nombre de Usuario"/>
                <TextBox Name="TxtUsuario" />
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <Label Content="Contraseña"/>
                <PasswordBox Name="PwdContra"/>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <Label Content="Rol de Acceso"/>
                <ComboBox Name="CmbRol">
                    <ComboBoxItem Content="Secretaria"/>
                    <ComboBoxItem Content="Lic.Sergio"/>
                </ComboBox>
            </StackPanel>

            <Button Grid.Row="4" Name="BtnLogin" Content="Ingresar al Sistema" Height="40" Background="#333" 
                    Foreground="White" FontWeight="Bold" BorderBrush="{x:Null}" Cursor="Hand" Click="BtnLogin_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#333333"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#555555"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock Grid.Row="5" Name="TxtMensaje" Foreground="Crimson" FontWeight="Bold" Margin="0,15,0,0" 
                       TextAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
    </Border>
</Window>