<Window x:Class="LexMigración.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acceso al Sistema" Height="480" Width="420" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="10" BorderBrush="#D4AF37" BorderThickness="2" Background="#F5F5F5" Padding="25">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                <TextBlock Text="⚖️" FontFamily="Segoe UI Symbol" FontSize="30" VerticalAlignment="Center" Foreground="#333"/>
                <TextBlock Text="Notaría Pública 215" FontSize="28" FontWeight="Bold" FontFamily="Times New Roman" 
                           Foreground="#333" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <Label Content="Nombre de Usuario"/>
                <TextBox Name="TxtUsuario" Foreground="Black"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <Label Content="Contraseña"/>
                <Grid>
                    <PasswordBox Name="PwdContra" Foreground="Black" PasswordChanged="PwdContra_PasswordChanged"/>
                    <TextBox Name="TxtContraVisible" Foreground="Black" Visibility="Collapsed" TextChanged="TxtContraVisible_TextChanged"/>
                    <ToggleButton Name="BtnMostrarContra"
                                  Width="30" Height="30"
                                  HorizontalAlignment="Right" VerticalAlignment="Center"
                                  Margin="0,0,5,0"
                                  Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                                  Checked="BtnMostrarContra_Checked" Unchecked="BtnMostrarContra_Unchecked">
                        <TextBlock Text="👁️" FontFamily="Segoe UI Symbol" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </ToggleButton>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <Label Content="Rol de Acceso"/>
                <ComboBox Name="CmbRol">
                    <ComboBoxItem Content="Secretaria"/>
                    <ComboBoxItem Content="Lic.Sergio"/>
                </ComboBox>
            </StackPanel>

            <Button Grid.Row="4" Name="BtnLogin" Content="Ingresar al Sistema" Height="40" 
                    Style="{StaticResource PrimaryButtonStyle}" Click="BtnLogin_Click"/>

            <Button Grid.Row="5" Name="BtnAbrirRegistro" Content="¿No tienes cuenta? Regístrate aquí" 
                    Margin="0,15,0,0" Background="Transparent" Foreground="#0066cc" 
                    BorderThickness="0" Cursor="Hand" Click="BtnAbrirRegistro_Click"/>

            <TextBlock Grid.Row="6" Name="TxtMensaje" Foreground="Crimson" FontWeight="Bold" Margin="0,15,0,0" 
                       TextAlignment="Center" TextWrapping="Wrap"/>
        </Grid>
    </Border>
</Window>