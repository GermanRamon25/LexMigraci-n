<Window x:Class="LexMigración.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Acceso al Sistema - LexMigración"
        Height="650" Width="1050"  
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.ColumnSpan="2" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#333333" CornerRadius="10, 0, 0, 10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Image Source="/Assets/notaria215.png" Width="350" Opacity="0.8"/>
                        <TextBlock Text="LexMigración" 
                                   Foreground="#D4AF37" 
                                   FontSize="32" 
                                   FontWeight="Bold" 
                                   TextAlignment="Center" 
                                   Margin="0,20,0,0"/>
                        <TextBlock Text="Sistema de Gestión Notarial" 
                                   Foreground="#CCCCCC" 
                                   FontSize="16" 
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Grid Grid.Column="1" Background="#F5F5F5">

                    <Button Content="&#xE8BB;" FontFamily="Segoe MDL2 Assets" 
                            Width="45" Height="45" 
                            Background="Transparent" Foreground="#555" 
                            BorderThickness="0" 
                            Click="CloseWindow_Click" 
                            ToolTip="Cerrar"
                            VerticalAlignment="Top" HorizontalAlignment="Right"
                            Margin="5"/>

                    <Border Width="340"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Background="White"
                            CornerRadius="10"
                            Padding="40">
                        <Border.Effect>
                            <DropShadowEffect Color="#BBBBBB" ShadowDepth="0" BlurRadius="15" Opacity="0.6"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Acceso al Sistema" FontSize="28" FontWeight="Bold" Foreground="#333" Margin="0,0,0,30" TextAlignment="Center" FontFamily="Times New Roman"/>

                            <Label Content="Nombre de Usuario"/>
                            <TextBox Name="TxtUsuario" Margin="0,0,0,15"/>

                            <Label Content="Contraseña"/>
                            <Grid>
                                <PasswordBox Name="PwdContra" PasswordChanged="PwdContra_PasswordChanged"/>
                                <TextBox Name="TxtContraVisible" Visibility="Collapsed" TextChanged="TxtContraVisible_TextChanged"/>
                                <ToggleButton Name="BtnMostrarContra"
                                              Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                                              Width="30" Height="30"
                                              HorizontalAlignment="Right" VerticalAlignment="Center"
                                              Margin="0,0,5,0"
                                              Checked="BtnMostrarContra_Checked" Unchecked="BtnMostrarContra_Unchecked">
                                    <TextBlock Text="👁️" FontFamily="Segoe UI Symbol" FontSize="14"/>
                                </ToggleButton>
                            </Grid>

                            <Label Content="Rol de Acceso" Margin="0,15,0,0"/>
                            <ComboBox Name="CmbRol" Margin="0,0,0,20">
                                <ComboBoxItem Content="Secretaria"/>
                                <ComboBoxItem Content="Lic.Sergio"/>
                            </ComboBox>

                            <Button Name="BtnLogin" Content="Ingresar al Sistema" Height="45" Style="{StaticResource PrimaryButtonStyle}" Click="BtnLogin_Click"/>

                            <Button Name="BtnAbrirRegistro" Content="¿No tienes cuenta? Regístrate aquí" 
                                    Margin="0,15,0,0" Background="Transparent" Foreground="#0066cc" 
                                    BorderThickness="0" Cursor="Hand" Click="BtnAbrirRegistro_Click"/>

                            <TextBlock Name="TxtMensaje" Foreground="Crimson" FontWeight="Bold" Margin="0,15,0,0" TextAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>